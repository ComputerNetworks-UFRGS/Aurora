

# Sample Apache configuration (insert in sites-enabled/000-default)

    # Aurora confs
    <Location "/Aurora">
        SetHandler python-program
        PythonHandler django.core.handlers.modpython
        PythonPath "['/var/www'] + sys.path"
        SetEnv DJANGO_SETTINGS_MODULE Aurora.settings
        PythonOption django.root /Aurora
        PythonDebug On
        PythonAutoReload On
        PythonInterpreter Aurora
    </Location>

    # Aurora confs
    <LocationMatch "/Aurora/static/(.*)">
        SetHandler None
    </LocationMatch>

    # Admin app
    Alias /Aurora/static/admin/ "/usr/local/lib/python2.6/dist-packages/django/contrib/admin/media/"

    # Other apps
    AliasMatch ^/Aurora/static/([a-zA-Z0-9]+)/?(.*) /var/www/Aurora/$1/static/$2


